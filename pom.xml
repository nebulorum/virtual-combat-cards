<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.exnebula</groupId>
    <artifactId>vcc</artifactId>
    <version>1.9.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <description>VCC Parent POM</description>
    <organization>
        <name>exnebula.org</name>
        <url>http://www.exnebula.org/</url>
    </organization>
    <name>Virtual Combat Cards</name>
    <inceptionYear>2008</inceptionYear>
    <properties>
        <scala.version>2.10.0</scala.version>
        <scala.versionShort>2.10</scala.versionShort>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <staging.hg.repo.url>https://code.google.com/p/virtual-combat-cards/</staging.hg.repo.url>
        <staging.mvn.repo.url>file:///tmp/maven-alt-repo</staging.mvn.repo.url>
    </properties>
    <modules>
        <module>vcc-infra</module>
        <module>vcc-dnd4e-tracker</module>
        <module>vcc-dnd4e</module>
        <module>vcc-dndi</module>
        <module>vcc-dnd4e-compendium</module>
        <module>vcc-datastore</module>
        <module>distribution</module>
        <module>vcc-main</module>
        <module>vcc-web</module>
        <module>vcc-xtemplate</module>
        <module>vcc-updater</module>
    </modules>

    <scm>
        <connection>https://code.google.com/p/virtual-combat-cards/</connection>
        <developerConnection>scm:hg:${staging.hg.repo.url}</developerConnection>
    </scm>
    <distributionManagement>
        <repository>
            <id>exnebula</id>
            <uniqueVersion>true</uniqueVersion>
            <name>ExNebula.org</name>
            <url>scp://petra.exnebula.org:222/var/repo</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>scala-tools.org</id>
            <name>Scala-Tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
        </repository>
        <repository>
            <id>snapshot scala-tools.org</id>
            <name>Scala-Tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-snapshots</url>
        </repository>
        <repository>
            <id>exnebula.org</id>
            <name>ExNebula Repository</name>
            <url>http://www.exnebula.org/files/repo</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>scala-tools.org</id>
            <name>Scala-Tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-compiler</artifactId>
            <version>${scala.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-actors</artifactId>
            <version>${scala.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.specs2</groupId>
            <artifactId>specs2_${scala.versionShort}</artifactId>
            <version>1.13</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>1.9.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.5.11</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.5.11</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.15</version>
            <exclusions>
                <exclusion>
                    <groupId>javax.mail</groupId>
                    <artifactId>mail</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>javax.jms</groupId>
                    <artifactId>jms</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.sun.jdmk</groupId>
                    <artifactId>jmxtools</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.sun.jmx</groupId>
                    <artifactId>jmxri</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- ensure that we use JDK 1.6 -->
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <tagNameFormat>version-@{project.version}</tagNameFormat>
                    <arguments>-Dstaging.hg.repo.url=${staging.hg.repo.url}
                        -DaltDeploymentRepository=release-repo-hudson::default::${staging.mvn.repo.url}
                        -Dstaging.mvn.repo.url=${staging.mvn.repo.url}
                    </arguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>scala-maven-plugin</artifactId>
                <version>3.1.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <scalaVersion>${scala.version}</scalaVersion>
                    <jvmArgs>
                        <jvmArg>-Xmx512m</jvmArg>
                        <jvmArg>-Xms64m</jvmArg>
                        <jvmArg>-Xss4m</jvmArg>
                    </jvmArgs>
                    <args>
                        <arg>-unchecked</arg>
                        <arg>-feature</arg>
                        <arg>-deprecation</arg>
                    </args>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.5.1</version>
                <configuration>
                    <header>vcc-dnd4e/ant/header.txt</header>
                    <basedir>${basedir}</basedir>
                    <mapping>
                        <scala>JAVADOC_STYLE</scala>
                    </mapping>
                    <quiet>false</quiet>
                    <failIfMissing>true</failIfMissing>
                    <aggregate>false</aggregate>
                    <includes>
                        <include>src/**/*.scala</include>
                    </includes>
                    <excludes>
                        <exclude>.*/**</exclude>
                        <exclude>target/**</exclude>
                        <exclude>.clover/**</exclude>
                    </excludes>
                    <properties>
                        <year>2008-2012</year>
                        <email>tms@exnebula.org</email>
                        <author>Thomas Santana</author>
                    </properties>
                </configuration>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
            </extension>
        </extensions>
    </build>
</project>